{
  "name": "esbuild-plugin-minify-html",
  "version": "0.1.1",
  "description": "esbuild plugin for importing html files as minified raw text.",
  "author": "Hatem Hosny",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": [
    "esbuild",
    "esbuild-plugin",
    "html",
    "raw",
    "minify"
  ],
  "repository": "https://github.com/hatemhosny/esbuild-plugin-minify-html.git",
  "homepage": "https://github.com/hatemhosny/esbuild-plugin-minify-html",
  "bugs": "https://github.com/hatemhosny/esbuild-plugin-minify-html/issues",
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm --clean",
    "example": "yarn build && cd example && node build.mjs",
    "build:example": "cd example && node build.mjs"
  },
  "devDependencies": {
    "@types/html-minifier-terser": "^7.0.0",
    "@types/node": "18.11.18",
    "esbuild": "0.17.2",
    "html-minifier-terser": "7.2.0",
    "tsup": "6.5.0",
    "typescript": "4.9.4"
  }
}
